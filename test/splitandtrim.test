package require tcltest
package require gen


::tcltest::test SplitAndTrim-1 {Basic test - 1} -body {
SplitAndTrim "one ,two, three" ","

} -result {one two three} -output {} -returnCodes {0}


::tcltest::test SplitAndTrim-2 {Basic test - 2} -body {
SplitAndTrim "one    two    three"
} -result {one two three} -output {} -returnCodes {0}


::tcltest::test SplitAndTrim-3 {Split misses} -body {
SplitAndTrim "one, two, three" "/"
} -result {{one, two, three}} -output {} -returnCodes {0}


::tcltest::test SplitAndTrim-4 {Empty target string} -body {
SplitAndTrim "" "/" " "
	
} -result {} -output {} -returnCodes {0}


::tcltest::test SplitAndTrim-5 {Empty split value} -body {
SplitAndTrim abc ""
} -result {a b c} -output {} -returnCodes {0}


::tcltest::test SplitAndTrim-6 {Empty trim value} -body {
SplitAndTrim "one ,two, three" "," ""
} -result {{one } two { three}} -output {} -returnCodes {0}

