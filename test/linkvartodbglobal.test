package require tcltest
package require -exact gen 1.6.0

::tcltest::test LinkVarToDbGlobal-0 {Basic test}  -constraints {}  -setup {sqlite3 testdb test.db}  -body {set MyVar 123
LinkVarToDbGlobal MyVar
puts [GetDbGlobal MyVar]
set MyVar 345
puts [GetDbGlobal MyVar]
}  -cleanup {UnlinkVarFromDbGlobal MyVar
}  -result {}  -output {123
345
}  -returnCodes {0}  


